<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Linker{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/"># Menu</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') ==  'simple_linker' %} active {% endif %}"
                   href="{{ path('simple_linker') }}">Simple Linker <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') ==  'key_word_linker' %} active {% endif %}"
                   href="{{ path('key_word_linker') }}">Key word Linker<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') ==  'address_linker' %} active {% endif %}"
                   href="{{ path('address_linker') }}">Address Linker<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    {% block body %}
        <main role="main" class="container">
            <div class="starter-template">
                <h1>Linker Project</h1>
                <p class="lead">Daniel Formela</p>
            </div>
        </main>
    {% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
